# Optimize npm for faster installs on Railway
registry=https://registry.npmjs.org/

# Reduce network overhead
prefer-offline=true
fetch-retries=3
fetch-retry-mintimeout=5000
fetch-retry-maxtimeout=30000

# Skip optional dependencies that aren't needed for build
optional=false

# Disable audit and fund messages during install
audit=false
fund=false

# Reduce log output
loglevel=error

# Use faster package resolution
legacy-peer-deps=true

# Skip running postinstall scripts that aren't needed
ignore-scripts=false
